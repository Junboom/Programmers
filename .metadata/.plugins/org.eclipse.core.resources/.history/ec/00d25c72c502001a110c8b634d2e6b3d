package kakao;

public class Solution_5 {

	public static int solution(int[] stones, int k) {
		int answer = 0;
		int max = 2000000000;
		while(max - answer > 1) {
			int mid = (answer + max) / 2;
			int[] arr = stones.clone();
			boolean check = true;
			int count = 0;
			for (int i = 0; i < arr.length; ++i) {
				arr[i] -= mid;
				if (arr[i] < 0) {
					if (++count == k) {
						check = false;
						break;
					}
				}
				else
					count = 0;
			}
			if(check)	answer = mid;
			else		max = mid;
       }
       return answer;
    }
	
	public static void main(String[] args) {
		System.out.println(solution(new int[]{2, 4, 5, 3, 2, 1, 4, 2, 5, 1}, 3));
	}

}
