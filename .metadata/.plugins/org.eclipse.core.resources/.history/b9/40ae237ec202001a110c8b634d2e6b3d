package kakao;

public class Solution_5 {

	public int solution(int[] stones, int k) {
        int min=0;
           int max = 2000000001;
           while(max-min!=1) {
              int mid = (min+max)/2;
              int[] arr=stones.clone();
              boolean flag = true;
              int count=0;
              for(int i=0;i<arr.length;i++) {
                 arr[i]-=mid;
                 if(arr[i]<0) {
                    count++;
                    if(count==k) {
                       flag=false;
                       break;
                    }
                 }else {
                    count=0;
                 }
              }
              if(flag) {
                 min=mid;
              }else {
                 max=mid;
              }
           }
           return min;
    }
	
	public static void main(String[] args) {
		
	}

}
